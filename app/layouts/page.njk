{% extends "app/layouts/base.njk" %}

{% block beforeContent %}
  {{ govukBreadcrumbs({
    classes: "govuk-!-display-none-print",
    items: breadcrumbItems
  }) if showBreadcrumbs }}
{% endblock %}

{% block content %}
  {% call appArticle({
    header: {
      title: title,
      description: description
    }
  }) %}
    {{ content }}
  {% endcall %}

  {{ xGovukRelatedNavigation(related) if related.sections[0].items | length > 0 }}
{% endblock %}
